<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1F2BA1"

    tools:context=".Login">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/fkom"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Selamat Datang di FKOM Mobile APP"
        android:textSize="15dp"
        android:textColor="@color/white"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginBottom="-20dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_margin="12dp"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"/>
                <EditText
                    android:backgroundTint="#B5B5B5"
                    android:inputType="text"
                    android:background="@drawable/login_bg"
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="password"/>
                <EditText

                    android:backgroundTint="#B5B5B5"
                    android:background="@drawable/login_bg"
                    android:inputType="textPassword"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <Button
                    android:id="@+id/login"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#124BE8"
                    app:cornerRadius="0dp"
                    android:text="LOGIN"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Or Sign In With"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/google"/>
                    <ImageView
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/twitter"/>
                    <ImageView
                        android:layout_margin="20dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/apple"/>
                </LinearLayout>
                <LinearLayout
                    android:background="#1036A1"
                    android:layout_marginTop="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/fragLogin"
                        android:backgroundTint="#124BE8"
                        android:layout_marginRight="20dp"
                        app:cornerRadius="0dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Login" />
                    <Button
                        android:id="@+id/fragRegister"
                        android:backgroundTint="#124BE8"
                        app:cornerRadius="0dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Register"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>
